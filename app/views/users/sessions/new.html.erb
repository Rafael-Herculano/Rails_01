  <div class="full-page">
    <div class="content-image float">
      <div class="image-left" style="background-image: url(<%= asset_path "back03.jpg" %>)"></div>    
    </div>
    <div class="tela-login float">
      <div class="conteudo">
        <div class="logo"><%= image_tag "logo.png", :class => "img-responsive"  %></div>
          <div class="form-login">
            <div class="login-form-1">
             
                <div class="login-form-main-message"></div>
               
                                   
                <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                   <div class="main-login-form">
                      <div class="login-group">
                            <%= devise_error_messages! %>
                            <div class="form-group">
                              <%= f.label :email , class:"sr-only" %>
                              <%= f.email_field :email, autofocus: true, class:"form-control" %>
                            </div>

                            <div class="form-group">
                              <%= f.label :password, class:"sr-only" %><br />
                                <%= f.password_field :password, autocomplete: "off", class:"form-control" %>
                            </div>

                            <div class="form-group login-group-checkbox">
                              <% if devise_mapping.rememberable? -%>
                            
                                <%= f.check_box :remember_me , class:"form-group login-group-checkbox" %>
                               <%= f.label :remember_me %>
                               
                              <% end -%>
                            </div>

                      </div>
                      
                      <div class="actions">
                      <%= f.submit "Log in" %>
                      </div>
                   </div>
                
                   
                    <div class="etc-login-form">
                      <p>Esqueceu a senha? <a href="recuperar_senha.html">Clique aqui</a></p>
                    </div>

                <% end %>

                
            
            </div>
          </div>
        </div>
      </div>
    </div>
  



