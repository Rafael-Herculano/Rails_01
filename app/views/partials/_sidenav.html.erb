
<div class="main_container">

  <div class="col-md-3 left_col">
    <div class="left_col scroll-view">
      <div class="navbar nav_title" style="border: 0;">
        <%= link_to root_path, class: 'site_title' do %>
          <%= image_tag "logo_cortado.png", :class => "img-responsive logo"  %>
          <span class="title-logo">Thainan e Thauany<br>confecções</span>
        <% end %>
      </div>
      <div class="clearfix"></div>


      <!-- menu profile quick info -->
      <div class="profile">
        <div class="profile_pic">
          <%= image_tag "user.jpeg", :class => "img-circle profile_img"  %>
        </div>
        <div class="profile_info">
          <span>Bem vindo,</span>
          <h2>Kermit Muppet</h2>
        </div>
      </div>
      <!-- /menu profile quick info -->

      <br />

      <!-- sidebar menu -->
      <div id="sidebar-menu" class="main_menu_side hidden-print main_menu">

        <div class="menu_section">
          <h3>Administrador</h3>
          <ul class="nav side-menu">
            <li><a><i class="fa fa fa-bar-chart-o"></i> Dashboard <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><%= link_to 'Visão Geral',root_path %></li>
              </ul>
            </li>
            <li><a><i class="fa fa-tasks"></i> Serviços <span class="fa fa-chevron-down"></span></a>
              <ul class="nav child_menu" style="display: none">
                <li><%= link_to 'Todos os Serviços', servicos_path %></li>
                <%
                  servicos = Servico.all
                  if servicos.present?
                    servicos.each do |servico|
                %>
                      <li><%= link_to servico do %><%= servico.nome %><% end %></a></li>
                    <% end
                  end %>
                <li><%= link_to '+ Adicionar Serviço', new_servico_path %></li>
              </ul>
            </li>
            <li><a><i class="fa fa-exchange"></i> Caixa </a></li>
            <li><a><i class="fa fa-users" aria-hidden="true"></i> Funcionários </a></li>
          </ul>
        </div>
      </div>
      <!-- /sidebar menu -->

      <!-- /menu footer buttons -->
      <div class="sidebar-footer hidden-small">
        <a data-toggle="tooltip" data-placement="top" title="Configurações">
          <span class="glyphicon glyphicon-cog" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" id="tela_cheia" data-placement="top" title="Tela Cheia">
          <span class="glyphicon glyphicon-fullscreen" aria-hidden="true"></span>
        </a>
        <a data-toggle="tooltip" data-placement="top" title="Bloquear">
          <span class="glyphicon glyphicon-eye-close" aria-hidden="true"></span>
        </a>
        <%= link_to "" , destroy_user_session_path, method: :delete , data: {confirm:"tem certeza que deseja sair?"} , class:"glyphicon glyphicon-off"  %>
        
      </div>
      <!-- /menu footer buttons -->
    </div>
  </div>
